<h2>Add A New Project</h2>

<form action="/projects" method="POST">
    <p><label>Title </label><input type="text" id="title" name="title"></p>
    <p><label>Domain </label><input type="text" id="domain" name="domain"></p>
    <p><label for="classification">Classification </label>
    <select name="classification">
        <option value="CLI">CLI</option>
        <option value="Web Based" selected>Web Based</option>
    </select></p>
    <p><label for="nature">Type </label>
    <select name="nature">
        <option value="Collaboration" selected> Collaboration </option>
        <option value="Individual" > Individual </option>
    </select></p>
    <p><label>Languages </label><input type="text" id="languages" name="languages"></p>
    <p><label>Libraries </label><textarea id="libraries" name="libraries"></textarea></p>
    <p><label for="phase">Phase </label>
    <select name="phase">
        <option value="Planning" selected> Planning </option>
        <option value="Development" > Development </option>
        <option value="Testing" > Testing </option>
        <option value="Completed" > Completed </option>
        <option value="Production" > Production </option>
    </select></p>
    <p><label>Start Date </label><input type="date" id="start_date" name="start_date"></p>
    <p><label>Planned Completion Date </label><input type="date" id="planned_end_date" name="planned_end_date"></p>
    <p><label>Actual Completion Date </label><input type="date" id="actual_end_date" name="actual_end_date"></p>
    <p><label>Notes </label><textarea id="notes" name="notes"></textarea></p>

    <input type="submit" value="Add Project">
    <%if current_user.projects.size > 0%>
        <a href="/projects">Cancel</a>
    <%end%>
</form>