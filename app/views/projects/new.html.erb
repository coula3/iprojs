<br><h2>Add A New Project</h2>

<form action="/projects" method="POST">
    <p><label>Title </label><input type="text" id="title" name="title" style="width: 800px"></p>
    <p><label>Domain </label><input type="text" id="domain" name="domain" style="width: 800px"></p>
    <p><label for="classification">Classification </label>
    <select name="classification">
        <option value="CLI">CLI</option>
        <option value="Web Based" selected>Web Based</option>
    </select></p>
    <p><label for="nature">Type </label>
    <select name="nature">
        <option value="Collaboration" selected> Collaboration </option>
        <option value="Individual" > Individual </option>
    </select></p>
    <p><label>Languages </label><input type="text" id="languages" name="languages" style="width: 800px"></p>
    <p><label class="lbltext">Libraries </label><textarea id="libraries" name="libraries"></textarea></p>
    <p><label for="phase">Phase </label>
    <select name="phase">
        <option value="Planning" selected> Planning </option>
        <option value="Development" > Development </option>
        <option value="Testing" > Testing </option>
        <option value="Completed" > Completed </option>
        <option value="Production" > Production </option>
    </select></p>
    <p><label>Start Date </label><input type="date" id="start_date" name="start_date"></p>
    <p><label>Planned End Date </label><input type="date" id="planned_end_date" name="planned_end_date"></p>
    <p><label>Actual End Date </label><input type="date" id="actual_end_date" name="actual_end_date"></p>
    <p><label>VCS URL </label><input type="text" id="url" name="url" style="width: 800px"></p>
    <p><label class="lbltext">Notes </label><textarea id="notes" name="notes"></textarea></p>

    <button class="button">Add Project</button>
    <%if current_user.projects.size > 0%>
        <a href="/projects">Cancel</a>
    <%end%>
</form>