<br><h2>Edit Project</h2>

<% if flash.has?(:message) %>
    <span style="color:red"><%= flash[:message] %></span>
<% end %><br><br>

<form action="/projects/<%=@project.slug %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <p><label>Title </label><input class="inputs-width" type="text" id="title" name="title" value="<%=@project.title%>"></p>
    <p><label>Domain </label><input class="inputs-width" type="text" id="domain" name="domain" value="<%=@project.domain%>"></p>

    <p><label for="classification">Classification </label>
    <select name="classification">
        <%=c = 0 %>
            <% until c == @list_classification.size %>
                <option value="<%=@list_classification[c]%>" selected><%=@list_classification[c]%></option>
                <%=c += 1%>
            <% end %>
            <option value="<%=@project.classification%>" selected><%=@project.classification%></option>
    </select></p>

    <p><label for="project_type">Type </label>
    <select name="project_type">
        <option value="<%=@list_project_type[0]%>" selected><%=@list_project_type[0]%></option>
        <option value="<%=@project.project_type%>" selected><%=@project.project_type%></option>
    </select></p>

    <p><label>Language(s) </label><input class="inputs-width" type="text" id="languages" name="languages" value="<%=@project.languages%>"></p>
    <p><label class="lbltext">Frameworks and Libraries </label><textarea class="libraries" name="libraries"><%=@project.libraries%></textarea></p>

    <p><label for="phase">Phase </label>
    <select name="phase">
        <%=i = 0 %>
        <% until i == @list_phases.size %>
            <option value="<%=@list_phases[i]%>" selected><%=@list_phases[i]%></option>
            <%=i += 1%>
        <% end %>
        <option value="<%=@project.phase%>" selected><%=@project.phase%></option>
    </select></p>
    
    <p><label>Start Date </label><input type="date" id="start_date" name="start_date" value="<%=@project.start_date.to_s.gsub(" 00:00:00 UTC", "")%>"></p>
    <p><label>Planned End Date </label><input type="date" id="planned_end_date" name="planned_end_date" value="<%=@project.planned_end_date.to_s.gsub(" 00:00:00 UTC", "")%>"></p>
    <p><label>Actual End Date </label><input type="date" id="actual_end_date" name="actual_end_date" value="<%= @project.actual_end_date.to_s.gsub(" 00:00:00 UTC", "")%>"></p>
    <p><label title="Version Control System URL">VCS URL </label><input class="inputs-width" type="text" id="url" name="url" value="<%=@project.url%>"></p>
    <p><label class="lbltext">Notes </label><textarea class="notes" name="notes"><%=@project.notes%></textarea></p>

    <button class="button">Save</button>
    <a href="/projects/<%=@project.slug%>" style="margin-left: 10px">Cancel</a>
</form>