<br>
<h2>My Profile</h2>

<% if flash.has?(:message) %>
    <p id="user-profile-msg"><%= flash[:message] %></p>
<% end %><br><br>

<div id="profile-card">
    <div id="user-profile-div">
        <p>
            <label class="user-profile-label">UID: </label>
            <strong><%=@user.id.to_s.rjust(10, '0')%></strong>
        </p>
        <p>
            <label class="user-profile-label">First Name:</label>
            <%=@user.first_name%>
        </p>
        <p>
            <label class="user-profile-label">Last Name:</label>
            <%=@user.last_name%>
        </p>
        <p>
            <label class="user-profile-label">Organization:</label>
            <%=@user.organization.titlecase if @user.organization %>
        </p>
        <p>
            <label class="user-profile-label">Age:</label>
            <%= calculate_age %>
        </p>
        <p>
            <label class="user-profile-label">Gender:</label>
            <%=@user.gender%>
        </p>
        <p>
            <label class="user-profile-label">Email:</label>
            <%=@user.email%>
        </p>

        <br>
        <p>
            <label class="user-profile-label">Date Joined:</label>
            <%= @user.created_at.strftime("%b %d, %Y") %>
        </p>
        <p id="user-profile-update-p">
            <label class="user-profile-label">
                Last updated:
            </label>
            <span id="user-profile-update-span">
                <%= @user.updated_at.strftime("%b %d, %Y") + " " + @updated_at.to_s.slice(11..18) %>
            </span>
        </p>
    </div>

    <p id="user-profile-buttons-p">
        <a href="/users/<%=current_user.slug%>/edit" class="user-buttons blue-white-buttons">Edit Profile</a>
        <a href="/users/<%=current_user.slug%>/change_password" class="user-buttons blue-white-buttons">Change Password</a>

        <a href="/projects" class="user-buttons white-blue-buttons user-myprojs">My Project<%= + "s" if current_user.projects.size > 1 %></a>
    </p>
</div>