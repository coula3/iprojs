<br>
<h2>Change Password</h2>

<% if flash.has?(:message) %>
    <span style="color:red"><%= flash[:message] %></span>
<% end %><br><br>

<div id="password-card">
    <form action="/users/<%=@user.slug%>/change_password" method="POST">
        <input id="hidden" type="hidden" name="_method" value="patch">
        <p style="margin-bottom: 30px">
           <input type="password" style="width: 300px; height: 20px; padding: 2px 5px" id="current_password" name="current_password" placeholder="Current password" />
        </p>
        <p>
            <input type="password" style="width: 300px; height: 20px; padding: 2px 5px" id="new_password" name="new_password" placeholder="New password" value="<%= @user.password %>" />
        </p>
        <p style="margin-bottom: 40px">
            <input type="password" style="width: 300px; height: 20px; padding: 2px 5px" id="password_confirmation" name="password_confirmation" placeholder="Re-type new password" />
        </p>

        <p style="margin-top: 0px; text-align: center;">
            <button class="button" style="width:315px; height:35px; background: #fff; color: #0000ff; cursor: pointer">Save</button>
            <a href="/users/<%=current_user.slug%>" style="background: #3572d4; color: #fff; text-decoration:none; text-align: center; display: inline-block; width: 300px; height: 25px; margin: 25px 0px; padding: 8px 5px 0px 5px; border: solid 2px grey; border-style: outset">My Profile</a>
        </p>
    </form>
</div>
