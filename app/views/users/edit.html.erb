<%@user%>

<form action="/users/<%=@user.id%>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p><label>First Name</label><input type="text" name="first_name" value="<%= @user.first_name %>"></p>
    <p><label>Last Name</label><input type="text" name="last_name" value="<%= @user.last_name %>"></p>
    <p><label>Organization</label><input type="text" name="organization" value="<%= @user.organization %>"></p>
    <p><label>Date of Birth</label><input type="date" name="dob" value="<%= @user.dob %>"></p>
    <p><label>Gender</label><input type="text" name="gender" value="<%= @user.gender %>"></p>
    <p><label>eMail</label><input type="text" name="email" value="<%= @user.email %>"></p>
    <p><label>Password</label><input type="password" name="password" value="<%= @user.password %>"></p>

   <input type="submit" id="submit" value="Save">
</form>