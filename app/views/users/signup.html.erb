<a href="/">Home</a><br><br>

<% if flash.has?(:message) %>
    <span style="color:red"><%= flash[:message] %></span>
<% end %><br><br>

<h2>Please enter your details to sign up</h2>

<form action="/signup" method="POST">
    <p><label for="first_name">First Name </label><input type=text id="first_name" name="first_name"/></p>
    <p><label for="last_name">Last Name </label><input type=text id="last_name" name="last_name"/></p>
    <p><label for="organisation">Organization </label><input type=text id="organization" name="organization"/></p>
    <p><label for="dob">Date of Birth </label><input type="date" id="dob" name="dob"></p>
    <p><label for="gender">Gender </label>
    <select name="gender">
        <option value="Female" selected>Female</option>
        <option value="Male" selected>Male</option>
        <option value="Non-Binary" selected>Non-Binary</option>
        <option value="" selected></option>
    </select></p>
    <p><label for="email">eMail </label><input type="email" id="email" name="email"></p>
    <p><label for="password">Password </label><input type="password" name="password"></p>

    <button class="button">Sign up</button>

</form>
