<a href="/">Home</a><br><br>

<% if flash.has?(:message) %>
    <div style="margin: 0px 0px 25px 15px ">
        <ul>
            <% flash[:message].split(", ").each do |message| %>
                <li><span style="padding-right: 10px"><></span><span style="color:red"><%= message %></span></li>
            <% end %>
        </ul>
    </div>
<% end %>

<h2>Please enter your details to sign up</h2>

<form action="/signup" method="POST">
    <p><label for="first_name">First Name </label><input type="text" id="first_name" name="first_name"/></p>
    <p><label for="last_name">Last Name </label><input type="text" id="last_name" name="last_name"/></p>
    <p><label for="organization">Organization </label><input type="text" id="organization" name="organization"/></p>
    <p><label for="dob">Date of Birth </label><input type="date" id="dob" name="date_of_birth"></p>
    <p><label for="gender">Gender </label>
    <select id="gender" name="gender">
        <option value="Female" selected>Female</option>
        <option value="Male" selected>Male</option>
        <option value="Non-Binary" selected>Non-Binary</option>
        <option value="" selected></option>
    </select></p>
    <p><label for="email">eMail </label><input type="email" id="email" name="email"/></p>
    <p><label for="password">Password </label><input type="password" id="password" name="password"/></p>
    <p><label for="password_confirmation">Confirm Password </label><input type="password" id="password_confirmation" name="password_confirmation"/></p>

    <button class="button">Sign up</button>
</form>
